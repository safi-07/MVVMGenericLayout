<UserControl x:Class="DesktopApplication.UserControls.Shelves.SearchShelf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:DesktopApplication.UserControls.Shelves"
             xmlns:local="clr-namespace:DesktopApplication.UserControls.GenericLayout.CRUD"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" Width="Auto" Padding="5">
    <local:MainTemplate>
        <local:MainTemplate.Title>
            Shelf
        </local:MainTemplate.Title>
        <local:MainTemplate.FilterPanel>
            <uc:FilterShelf />
        </local:MainTemplate.FilterPanel>
        <local:MainTemplate.ResultPanel>
            <uc:ShelfFilterResult/>
        </local:MainTemplate.ResultPanel>
        <local:MainTemplate.UpdatePanel>
            <uc:UpdateShelf/>
        </local:MainTemplate.UpdatePanel>
    </local:MainTemplate>
</UserControl>

