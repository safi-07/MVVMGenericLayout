                BorderBrush="{StaticResource SolidBorderBrush}"/>
                                <ScrollViewer Padding="2" Margin="4,6,4,6" SnapsToDevicePixels="True">
                                    <StackPanel x:Name="Stackpanel"  IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasItems" Value="false">
                            <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
